<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConcepTecnico">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="59dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorsePaso"
                android:text="RECUERDE FIRMAR ABAJO"/>
       <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="230dp"

        android:padding="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/borderlayout"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:layout_marginLeft="21dp"
            android:textSize="17sp"
            android:text="Argumente la viabilidad técnica de la inversión a realizar:"/>
        <EditText
            android:id="@+id/Viabilidad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:background="@color/fondo"
            android:scrollbars="vertical"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:minLines="2"
            android:maxLines="4"
            android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ .,"
            android:textSize="13sp"
            android:inputType="text"
            android:singleLine="false"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/LL1"
        android:padding="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/borderlayout"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="31dp"
            android:textSize="17sp"
            android:layout_marginLeft="31dp"
            android:text="Acciones de sostenibilidad:"/>
        <EditText
            android:id="@+id/Sostenibilidad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:ems="10"
            android:background="@color/fondo"
            android:scrollbars="vertical"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:minLines="2"
            android:maxLines="4"
            android:textSize="13sp"
            android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ .,"
            android:inputType="text"
            android:singleLine="false"
            />
    </LinearLayout>
            <TextView

                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre completo del Gestor PP:"
                android:gravity="center_horizontal"
                />

            <EditText
                android:id="@+id/gestor"
                android:layout_width="258dp"
                android:layout_height="32dp"
                android:layout_below="@+id/tv1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/borde_negro"
                android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ .,"
                android:padding="5px"

                />

    </LinearLayout>
    </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:background="@color/gris"
        app:itemBackground="@color/gris"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigationrevi" />
</RelativeLayout>